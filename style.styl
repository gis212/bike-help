*
  margin: 0
  padding: auto
  box-sizing: border-box

.smooth
  transition: transform calc(var(--f, 1)*.5s) ease-out;

  :global(ul)
    list-style-type: none

html
  scroll-behavior: smooth

body
  margin: 0 auto
  font-family: 'Poppins', sans-serif
  overflow-x: hidden

a
  text-decoration: none
  cursor: pointer
  color: inherit

header
  position: absolute
  top: 0
  left: 0
  z-index: 10
  width: 100%
  display: flex
  justify-content: center
  align-content: space-between
  align-items: center
  color: #fff
  padding: 35px 100px 0

  nav
    width: 100%
    display: flex
    padding: 35px 100px 0

    a
      display: block
      margin: 15px
      &#title
        flex-grow: 1
      :first-child
        margin-left: 0

      :last-child
        margin-right: 0

  @media(max-width: 1000px)
    padding: 20px 50px

  @media(max-width: 700px)
    flex-direction: column
    nav a
      margin: 0 7px

section
  display: flex
  flex-direction: column
  align-items: center
  padding: 110px 100px

  @media(max-width: 1000px)
    padding: 100px 50px

  @media(max-width: 600px)
    padding: 125px 30px

  p
    max-width: 800px
    text-align: center
    margin-bottom: 35px
    padding: 0 20px
    line-height: 2

  .section-title
    text-transform: uppercase
    font-size: 50px
    margin-bottom: 5%

.card-list
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  list-style-type: none

  li
    padding: 0 30px
    flex-basis: 33%
    text-align: center

    i
      font-size: 50px
      color: crimson
      margin-bottom: 25px

    h4
      font-size: 20px
      margin-bottom: 25px

    p
      margin: 0
.swiper
  display: flex
  width: 100%
  align-items: center
  text-align: center
  overflow-y: hidden
  height: 50vw
  max-height: 100vh
  --n: 1
  width: 100%
  width: calc(var(--n)*100%)
  transform: translate(calc(var(--i, 0)/var(--n)*-100%))
  transition: transform .5s ease-out

  :global(img)
    // background-image: url(/img/BGs.jpg)
    height: 100%
    width: inherit
    z-index: -1
    min-width: 100%
    width: calc(100%/var(--n))
    pointer-events: none

    &::after
      content: ''
      position: absolute
      left: 0
      width: 100%
      height: 100%
      background-color: #000
      opacity: 0.8


h1
  margin-bottom: 15px
  font-size: 65px

h2
  margin-bottom: 40px
  font-size: 25px

a.banner-btn
  padding: 15px 35px
  background: crimson
  border-radius: 50px
  text-transform: uppercase

@media(max-width:800px)
  min-height: 600px

/*about*/
#about-content
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  padding: 20px
  height: 290px
  background-clip: content-box
  background-size: cover
  background-position: center

  #about-left
    flex-grow: 2
    background-image: url(/img/startup1.jpg)

  #about-right
    flex-grow: 3
    h2
      margin-bottom: 3%
    p
      max-width: 800px
      margin-bottom: 35px
      line-height: 1.5
      text-align: left
      padding-left: 0
    .about-btn
      padding: 15px 35px
      background: crimson
      border-radius: 50px
      text-transform: uppercase
      color: #fff

/*services*/
#services
  background: #ddd
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  padding: 0 30px
  flex-basis: 33%
  text-align: center
  list-style: none

/* contact*/
#contact
  background: #fff

ul.contact-content
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center

.contact-content li
  padding: 0 30px
  flex-basis: 33%
  text-align: center

.contact-content i
  font-size: 50px
  color: crimson
  margin-bottom: 25px

.contact-content li p
  margin: 0

@media(max-width:1000px)
  .contact-content li
    flex-basis: 100%
    margin-bottom: 65px

  .contact-content li:last-child
    margin-bottom: 0

  .contact-content li p
    padding: 0
